{
    "app-id": "com.github.yursan9.Arkan",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.32",
    "sdk": "org.gnome.Sdk",
    "command": "arkan",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "build-options": {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        }
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name" : "libhandy",
            "buildsystem" : "meson",
	    "builddir": true,
	    "config-opts": [
		"-Dglade_catalog=disabled",
		"-Dexamples=false",
		"-Dtests=false",
		"-Dvapi=false"
	    ],
            "sources" : [
                {
                  "type" : "git",
                  "tag": "v0.0.11",
                  "url" : "https://source.puri.sm/Librem5/libhandy.git"
                }
            ]
        },
        {
            "name": "arkan",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "file:///home/yurizal/Projects/arkan"
                }
            ]
        }
    ]
}
